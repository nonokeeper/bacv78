<form method="post" action="{{ path('tournoi.delete', {'id': tournoi.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tournoi ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournoi.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash-alt">&nbsp;</i>Supprimer le Tournoi</button>
</form>
