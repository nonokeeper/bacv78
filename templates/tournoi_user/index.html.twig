{% extends 'base.html.twig' %}

{% block title 'Lien Tournois Joueurs' %}

{% block body %}

<div class="container mt-4">
    <h1>Bienvenue {% if app.user %}{{ app.user.firstName }}{% endif %}</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for tournoiUser in tournoisUser %}
            <tr>
                <td>{{ tournoiUser.user }}</td>
                <td>{{ tournoiUser.tournoi }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
