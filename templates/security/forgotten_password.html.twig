{% extends 'base.html.twig' %}
 
{% block title %}Oubli de mot de passe{% endblock %}
 
{% block body %}
    {% for message in app.flashes('danger') %}
        <div class="danger">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="danger">
            {{ message }}
        </div>
    {% endfor %}
    <form method="post">
        <div class="text-center w-50 p-2 mx-auto">
            <i class="fas fa-unlock">&nbsp;</i>
            <div class="p-1"></div>
            <h4>RÃ©initialisation du mot de passe</h4>
            <div class="p-1"></div>
            <input type="email" name="email" id="inputEmail" class="form-control w-50 mx-auto" placeholder="Ton e-mail" required autofocus>
            <div class="p-1"></div>
            <button class="btn btn-lg btn-primary" type="submit">
                Envoyer
            </button>
        </div>
    </form>
    {% for message in app.flashes('notice') %}
        <div class="info">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}